<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DersUygulamasi8.Page2">
    <ContentPage.Content>
        <StackLayout>
            <Image
               x:Name="imgBox"
               VerticalOptions="CenterAndExpand"
               HeightRequest="300"
               Aspect="Fill"
               ></Image>

            <Label x:Name="lblFileName" HorizontalOptions="Center"></Label>

            <Button x:Name="btnPrevImage"
                    Text="Önceki Resim"
                    HorizontalOptions="CenterAndExpand"
                    Clicked="btnPrevImage_Clicked"/>

            <Button x:Name="btnNextImage"
                    Text="Sonraki Resim"
                    HorizontalOptions="CenterAndExpand"
                    Clicked="btnNextImage_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>